-#  This file is app/views/movies/index.html.haml
%h2 All Movies
= form_tag movies_path, :method => :get, id: "ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]",rating, @ratings.include?(rating), {:id => "ratings_#{rating}"}
  = submit_tag 'Refresh', id: "ratings_submit"

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:class=>@highlight_title, :id=>"title_header"}= link_to "Movie Title" , :sort => "title"
      %th Rating
      %th{:class=>@highlight_release_date, :id=>"release_date_header"}= link_to "Release Date", :sort => "release_date"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
